{
    "name": "adduc/feed-discovery",
    "description": "Parses server responses for references to RSS/Atom/JSON feeds",
    "require": {
        "ext-dom": "*",
        "psr/http-message": "^1.0"
    },
    "require-dev": {
        "adduc/coding-standards": "dev-master",
        "guzzlehttp/psr7": "^1.4",
        "phpunit/phpunit": "^7.4",
        "squizlabs/php_codesniffer": "^3.3"
    },
    "autoload": {
        "psr-4": {
            "Adduc\\Feed\\Discovery\\": "src/"
        }
    },
    "scripts": {
        "style": [
            "phpcs --standard=vendor/adduc/coding-standards/coding-standards.xml ."
        ],
        "test": [
            "phpunit -c tests/phpunit.xml"
        ]
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://gogs.128.io/personal/php-coding-standards.git"
        }
    ]
}
